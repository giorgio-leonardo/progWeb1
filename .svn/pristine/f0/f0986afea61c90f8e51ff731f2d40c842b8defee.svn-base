<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>FiltroLogin</filter-name>
        <filter-class>filters.FiltroLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroLogin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>
            listener
        </description>
        <listener-class>
            listeners.WebAppContextListener
        </listener-class>
    </listener>
    <context-param>
        <param-name>
            dbUrl
        </param-name>
        <param-value>
            jdbc:derby://localhost:1527/PrimoProgetto; user=root; password=root;
        </param-value>
    </context-param>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LandingPage</servlet-name>
        <servlet-class>servlets.LandingPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessButtons</servlet-name>
        <servlet-class>servlets.ProcessButtons</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>servlets.CreateGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptInvites</servlet-name>
        <servlet-class>servlets.AcceptInvites</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Groups</servlet-name>
        <servlet-class>servlets.Groups</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewGroup</servlet-name>
        <servlet-class>servlets.ViewGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPost</servlet-name>
        <servlet-class>servlets.NewPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestUpload</servlet-name>
        <servlet-class>servlets.RequestUpload</servlet-class>
        <init-param>
            <param-name>
                uploadDir
            </param-name>
            <param-value>
                groupsStorage
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingPage</servlet-name>
        <url-pattern>/LandingPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessButtons</servlet-name>
        <url-pattern>/ProcessButtons</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/CreateGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptInvites</servlet-name>
        <url-pattern>/AcceptInvites</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Groups</servlet-name>
        <url-pattern>/Groups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewGroup</servlet-name>
        <url-pattern>/ViewGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPost</servlet-name>
        <url-pattern>/NewPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestUpload</servlet-name>
        <url-pattern>/RequestUpload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
